<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="monster_form">
        <%= render 'shared/monster_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Monster Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to GM-Tools</h1>

    <h2>This is the home page for the GM-Tools application.</h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
