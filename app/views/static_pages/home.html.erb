<% if logged_in? %>
  <div class="row">
    <div class="col-md-12">
      <%= link_to "Create a monster!", new_monster_path, class: "btn btn-lg btn-primary" %>
      <h3>Monster Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to Make a Monster</h1>

    <h2>This is the home page for the Make a Monster application.</h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
