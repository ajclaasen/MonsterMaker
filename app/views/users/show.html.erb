<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.monsters.any? %>
      <h3>Monsters (<%= @user.monsters.count %>)</h3>
      <ol class="monsters">
        <%= render @monsters %>
      </ol>
      <%= will_paginate @monsters %>
    <% end %>
  </div>
</div>
